from numpy import array, size, min, max, sum
a = array([1, 2, 3])
print size(a)
print max(a)
print min(a)
print sum(a)


real(dp) :: a(3)
a = [1, 2, 3]
print *, size(a)
print *, maxval(a)
print *, minval(a)
print *, sum(a)

----

from numpy import array, size
a = array([[1, 2, 3], [4, 5, 6]])
print size(a, 0)
print size(a, 1)

real(dp) :: a(2, 3)
a = reshape([1, 2, 3, 4, 5, 6], [2, 3])
print *, size(a, 1)
print *, size(a, 2)

----

from numpy import array, size, max, min
a = array([[1, 2, 3], [4, 5, 6]])
print max(a)
print min(a)

real(dp) :: a(2, 3)
a = reshape([1, 2, 3, 4, 5, 6], [2, 3])
print *, minval(a)
print *, maxval(a)


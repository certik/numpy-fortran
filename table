where ( evalues < ef - fdtol*kbt)
   eweights = 1._dp
elsewhere( evalues > ef + fdtol*kbt)
   eweights = 0._dp
elsewhere
   eweights = 1._dp/(exp((evalues-ef)/kbt) + 1._dp)
end where

